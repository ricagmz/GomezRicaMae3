<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#003300"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="181dp"
        android:layout_height="116dp"
        android:layout_marginBottom="230dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="165dp"
        app:cardBackgroundColor="#d7ffd9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="14dp"
                android:text="Cold Brew" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView3"
                style="@style/desc"
                android:layout_width="146dp"
                android:layout_height="73dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:text="Cold Brew, StarbucksÂ® Draft and Iced Coffee" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="219dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="196dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="196dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        app:cardBackgroundColor="#b2fab4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="174dp"
            android:layout_height="212dp">

            <TextView
                android:id="@+id/textView6"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/multiAutoCompleteTextView"
                android:layout_alignStart="@+id/multiAutoCompleteTextView"
                android:text="Espresso" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView"
                style="@style/desc"
                android:layout_width="147dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="Artfully roasted and brewed fresh all day long, every day.  Lattes, cappuccinos, macchiatos, mochas and much more. " />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#75a478"
        android:id="@+id/cardView2"
        android:layout_width="179dp"
        android:layout_height="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="176dp"
            android:layout_height="93dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/sb"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="179dp"
        android:layout_height="234dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#c8e6c9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="229dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView7"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView8"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="Frappe" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView2"
                style="@style/desc"
                android:layout_width="148dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:text="The icy-cold original we made famous." />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <!-- ICON -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="354dp"
        android:layout_height="104dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="126dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:src="@drawable/ice" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="59dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@drawable/hott" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="113dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@drawable/frap" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/icon"
        android:layout_width="109dp"
        android:layout_height="27dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:text="Espresso"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        style="@style/icon"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Cold Brew"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        style="@style/icon"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="112dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="112dp"
        android:text="Frappe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>